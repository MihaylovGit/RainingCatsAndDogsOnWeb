@using RainingCatsAndDogsOnWeb.Common
@using RainingCatsAndDogsOnWeb.Web.ViewModels.Home
@model IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<h1>@this.ViewData["Title"]</h1>
Total Ads: @this.Model.AdsCount

<div class="center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName</h1>
    <div class="col-md-8">
        @foreach (var ad in Model.RandomAds)
       {
            <div class="media">
                <img class="align-self-center mr-3" src="@ad.ImageUrl" alt="@ad.Title">
                <div class="media-body">
                    <h5 class="mt-0">@ad.Location</h5>
                    <p class="mb-0">Location: @ad.Location</p>
                    <p class="mb-0">Price: @ad.Price лв.</p>
                    <p class="mb-0">Category: @ad.CategoryName</p>
                    <a asp-controller="Ads" asp-action="DetailsById" asp-route-id="@ad.Id">Go to current ad</a>
                </div>
            </div>
        }
    </div>
    <div class="col-md-4">
        <p>You can find your favourite pet via:</p>
        <ul class="list-group">
            <li>@Model.AdsCount ads.</li>
        </ul>
    </div>

</div>
