@using RainingCatsAndDogsOnWeb.Web.ViewModels.Ads
@model PagingViewModel
<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item @if(!Model.HasPreviousPage) {
        <text>disabled</text>
 }">
            <a class="page-link" asp-controller="Ads" asp-action="MyAds" asp-route-id="@Model.PreviousPageNumber">Previous</a>
        </li>
        @for (var i = @Model.PageNumber - 3; i < @Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li class="page-item"><a class="page-link" asp-action="MyAds" asp-route-id="@i">@i</a></li>
            }
        }
        <li class="page-item active">
            <a class="page-link" asp-controller="Ads" asp-action="MyAds" asp-route-id="@Model.PageNumber">@Model.PageNumber</a>
        </li>
        @for (var i = Model.PageNumber + 1; i <= Model.PageNumber + 3; i++)
        {
            if (i <= Model.PagesCount)
            {
                <li class="page-item"><a class="page-link" asp-action="MyAds" asp-route-id="@i">@i</a></li>
            }
        }
        <li class="page-item @if(!Model.HasNextPage) {
        <text>disabled</text>
 }">
            <a class="page-link" asp-action="MyAds" asp-route-id="@Model.NextPageNumber">Next</a>
        </li>
    </ul>
</nav>