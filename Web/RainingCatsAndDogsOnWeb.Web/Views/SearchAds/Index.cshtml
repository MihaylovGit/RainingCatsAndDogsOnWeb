@using RainingCatsAndDogsOnWeb.Web.ViewModels.Ads
@model IEnumerable<AdsInListViewModel>
@{
    this.ViewData["Title"] = $"{Model.Count()} ads found";
}

<br>
<h1 class="text-center">@this.ViewData["Title"]</h1>
<br>
<div class="text-center row">
    @foreach (var ad in this.Model)
    {
        <div class="card col-4" style="width: 20rem;">
            <img class="card-img-top" style="width: 18rem;"
             src="@ad.ImageUrl" alt="@ad.Title">
            <div class="card-body">

                <h5 class="card-title mt-1">@ad.Title</h5>
                <p class="mb-0">Location: @ad.Location</p>
                <p class="mb-0">Price: @ad.Price лв.</p>
            </div>

            <form class="input-group-sm" asp-route-id="@ad.Id" asp-controller="Ads" asp-action="DetailsById" method="post">
                <input type="submit" value="Details" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
        </div>
    }
</div>
<hr />
