@using RainingCatsAndDogsOnWeb.Web.ViewModels.Ads;
@model AdsListViewModel
@{
    this.ViewData["Title"] = $"You have {@Model.AdsCount} ads in total";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="text-center row">
    @foreach (var ad in this.Model.AllAds)
    {
        <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
             src="@ad.ImageUrl" alt="Movie Image">
            <div class="card-body">

                <h4 class="card-title mt-1">@ad.Title</h4>
                <hr>
                <p class="mb-0 h6">Location: @ad.Location</p>
                <hr>
                <p class="mb-0 h6">Price: @ad.Price лв.</p>
                <hr>
                <p class="mb-0">Description: @ad.Description</p>
                <hr>
            </div>

            <form class="input-group-sm" asp-route-id="@ad.Id" asp-controller="Ads" asp-action="Edit" method="post">
                <input class="fs-6 btn btn-success mb-3 p-2" type="submit" value="Edit" />
            </form>

             <form class="input-group-sm" asp-route-id="@ad.Id" asp-controller="Ads" asp-action="DeleteById" method="post">
                <input class="fs-6 btn btn-success mb-3 p-2" type="submit" value="Delete" />
            </form>
        </div>
    }
</div>
