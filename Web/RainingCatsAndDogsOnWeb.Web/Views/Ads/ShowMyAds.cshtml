@using RainingCatsAndDogsOnWeb.Web.ViewModels.Ads;
@model AdsListViewModel
@{
    this.ViewData["Title"] = $"You have {@Model.AdsCount} ads in total";
}

<h1>@this.ViewData["Title"]</h1>

<div class="row">
    @foreach (var ad in this.Model.AllAds)
    {
        <div class="row">
            <div>
                <div class="thumbnail">
                    <img src="@ad.ImageUrl" />
                    <div class="caption">
                        <h3>@ad.Title <a asp-action="" asp-route-id=@ad.Id></a></h3>
                        <p>@ad.Location</p>
                        <p>@ad.Price лв</p>
                        <p><a asp-controller="Ads" asp-action="DetailsById" class="btn btn-primary" role="button" asp-route-id=@ad.Id>View Details</a></p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>