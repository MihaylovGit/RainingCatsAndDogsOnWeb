@using RainingCatsAndDogsOnWeb.Web.ViewModels.Ads;
@model DogAdsListViewModel
@{
    this.ViewData["Title"] = "Now you can see all active Dog Ads";
}

<h1>@this.ViewData["Title"]</h1>
<div class="row">
    @foreach (var ad in this.Model.DogAds)
    {
        <div class="row">
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="@ad.ImageUrl" alt="...">
                    <div class="caption">
                        <h3>@ad.Title</h3>
                        <p>@ad.Location</p>
                         <p>@ad.Price</p>
                         <p>@ad.Description</p>
                         <p>@ad.CategoryId</p>
                         <p>@ad.Category</p>
                        <p><a asp-controller="Ads" asp-action="Details" class="btn btn-primary" role="button">View Details</a></p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
    
    
        


