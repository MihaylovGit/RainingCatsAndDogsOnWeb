@using RainingCatsAndDogsOnWeb.Web.ViewModels.Ads;
@model AdsListViewModel
@{
    
    this.ViewData["Title"] = $"You can find your dream pet between {@Model.AdsCount} ads";
}

<h1>@this.ViewData["Title"]</h1>

<div class="row">
    @foreach (var ad in this.Model.AllAds)
    {
        <div class="row">
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="@ad.ImageUrl" alt="...">
                    <div class="caption">
                        <h3>@ad.Title</h3>
                        <p>@ad.Location</p>
                        <p>@ad.Price</p>
                        <p>@ad.Description</p>
                        <p>@ad.CategoryId</p>
                        <p>@ad.Category</p>
                        <p>@ad.ImageUrl</p>
                        <p><a asp-controller="Ads" asp-action="ShowAllDogAds" class="btn btn-primary" role="button">View Details</a></p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<hr />
<partial name="_PagingPartial" model="@Model"/>





