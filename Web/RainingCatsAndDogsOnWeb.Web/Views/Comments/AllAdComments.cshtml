@using RainingCatsAndDogsOnWeb.Web.ViewModels.Comments
@model List<CommentViewModel>

@{
    ViewBag.Title = "All Comments";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="d-grid gap-2 mb-2">
    <a asp-controller="Comments" asp-action="Add" class="btn btn-primary">Add Comment</a>
</div>

@if (Model.Count() > 0)
{
    <div class="row">
        @foreach (var comment in Model)
        {
            <div class="col-sm-6">
                <div class="card ">
                    <div class="card-body">
                        <p class="card-text">@comment.Content</p>
                        <div class="d-grid gap-2">
                            <a asp-controller="Comments" asp-action="Edit" asp-route-id="@comment.Id" class="btn btn-warning">Edit</a>
                            <form class="mt-2" asp-controller="Comments" asp-action="Delete" asp-route-id="@comment.Id">
                                <div class="d-grid gap-2">
                                    <input type="submit" value="Delete" class="btn btn-danger mb-2" />
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center">No comments yet!</p>
}

