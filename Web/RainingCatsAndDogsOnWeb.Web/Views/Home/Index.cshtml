@using RainingCatsAndDogsOnWeb.Common
@using RainingCatsAndDogsOnWeb.Web.ViewModels.Home
@model IndexViewModel
@{
    ViewData["Title"] = "Best Pet Exchange Marketplace WorldWide";
}

<div class="flex-grow-1 search-bar">
    <form method="get" asp-controller="SearchAds" asp-action="Index">

        <div style="position:relative;" class="position-relative">

            <input type="text" placeholder="Find your dreamy pet" name="searchString" />
                   
            <button class="text-center position-absolute btn btn-sm btn-success" type="submit">Search</button>

        </div>
    </form>
</div>

<div>
    <h1 class="text-center">Welcome to @GlobalConstants.SystemName</h1>
    <h3 class="text-center fw-bold">@ViewData["Title"]</h3>
</div>

<div class="text-center h4">Suggested ads:</div>
<div class="container-fluid text-center">
    <div class="row row-cols-6 text-center cards-list">
        @foreach (var ad in Model.RandomAds)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-img"><img class="card-img-top img-fluid" src="https://@ad.ImageUrl" alt="@ad.Title" /></div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-uppercase">@ad.Title</h5>
                    <p class="card-text text-muted">
                        <a href="https://www.google.com/maps/place/Bulgaria">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            <span>@ad.Location</span>
                        </a>
                    </p>
                    <p class="h4">Price: @ad.Price</p>
                </div>
                <form class="input-group-sm" asp-route-id="@ad.Id" asp-controller="Ads" asp-action="DetailsById" method="post">
                    <input type="submit" value="Details" class="fs-6 btn btn-success mb-3 p-2" />
                </form>
            </div>
        }
    </div>
</div>






