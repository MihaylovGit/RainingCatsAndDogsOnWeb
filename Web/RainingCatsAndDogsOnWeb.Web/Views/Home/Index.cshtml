@using RainingCatsAndDogsOnWeb.Common
@using RainingCatsAndDogsOnWeb.Web.ViewModels.Home
@model IndexViewModel
@{
    ViewData["Title"] = "Best Pet Exchange Marketplace WorldWide";
}

<div class="pt-12 pr-10 flex-grow-1">
    <form method="get" action="/s">

        <div style="position:relative;" class="position-relative">

            <i class="position-absolute d-block font-13 icon-magnifier" style="position:absolute;top:13px;left:13px;color:black;z-index:200;"></i>

            <input id="q" name="q" type="text" placeholder="Find your dreamy pet" />
                   
            <button class="text-center position-absolute btn btn-sm btn-success font-16 pr-13 pl-12 pt-4 pb-7" style="background: orange; xborder-width:0px; border-top-right-radius: 25px; border-bottom-right-radius: 25px;background:#F96948; top:0px; right:-1px;z-index:100;height:37px;" type="submit">Search</button>

        </div>
    </form>

</div>

<div>
    <h1 class="text-center">Welcome to @GlobalConstants.SystemName</h1>
    <h3 class="text-center fw-bold">@ViewData["Title"]</h3>
</div>

<div class="text-center h4">Suggested ads:</div>
<div class="container-fluid text-center">
    <div class="row row-cols-6 text-center">
        @foreach (var ad in Model.RandomAds)
        {
            <div class="card shadow-sm mb-4">
                <img class="card-img-top img-fluid" style="width: 17.5rem;"
                 src="@ad.ImageUrl" alt="@ad.Title">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-uppercase">@ad.Title</h5>
                    <p class="card-text text-muted">
                        <a href="https://www.google.com/maps/place/Bulgaria">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            <span>@ad.Location</span>
                        </a>
                    </p>
                    <p class="h4">Price: @ad.Price лв.</p>
                </div>
                <form class="input-group-sm" asp-route-id="@ad.Id" asp-controller="Ads" asp-action="DetailsById" method="post">
                    <input type="submit" value="Details" class="fs-6 btn btn-success mb-3 p-2" />
                </form>
            </div>
        }
    </div>
</div>






