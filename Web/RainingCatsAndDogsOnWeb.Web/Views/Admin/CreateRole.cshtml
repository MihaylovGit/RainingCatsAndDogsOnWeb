@model CreateRoleViewModel
@{
    ViewData["Title"] = "Create Role";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post" asp-controller="Admin" asp-action="CreateRole">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.RoleName">Role Name</label>
                <input class="form-control " aria-required="true" asp-for="@Model.RoleName" />
                <span asp-validation-for="@Model.RoleName" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Create Role</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

